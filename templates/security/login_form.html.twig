<form method="post" style="width: 100%" id="loginForm">

    <h1 class="title has-text-primary">Veuillez entrez vos identifiants de connexion</h1>

    {% if error %}
        <article class="message is-small is-danger">
            <div class="message-header">
                <p>Oops !</p>
                <span class="icon is-small has-text-white">
                    <i class="fas fa-lg fa-exclamation-triangle"></i>
                </span>
            </div>
            <div class="message-body">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </article>
    {% endif %}

    <div class="field">
        <label class="label has-text-light">Email</label>
        <div class="control has-icons-left">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input is-primary" required autofocus>
            <span class="icon is-small is-left">
                <i class="fas fa-at"></i>
            </span>
        </div>
    </div>

    <div class="field">
        <label class="label has-text-light">Mot de passe</label>
        <div class="control has-icons-left">
            <input type="password" name="password" id="inputPassword" class="form-control input is-primary" required>
            <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
            </span>
        </div>
    </div>


    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="field" style="display: flex;justify-content: space-between">
        <a class="button is-small is-info-custom" href="{{ path('lost_password') }}">
            <span class="icon is-small is-left">
                <i class="fas fa-user-lock"></i>
            </span>
            <span>
                Mot de passe oubli√© ?
            </span>
        </a>

        <button onclick="this.style.cursor='pointer'; return true;" class="button is-green-custom is-small" type="submit"
                data-sitekey="6LfSl9wZAAAAACPrrml-QieLt8K7CfycrC1vJwMr"
                data-callback='onSubmit'
                data-action='submit'>
            <span class="icon is-small is-left">
                <i class="fas fa-key"></i>
            </span>
            <span>Connexion</span>
        </button>
    </div>

    <div class="field is-size-7">
        <div class="has-text-left">
            <span class="icon is-small is-left">
                <i class="fas fa-info-circle"></i>
            </span>
            Pas encore membre ? <a class="is-a-link" href="{{ path('app_register') }}">S'enregistrer</a>
        </div>

    </div>


</form>