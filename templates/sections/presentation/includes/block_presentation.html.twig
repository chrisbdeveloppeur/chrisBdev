<div class="is-centered block-presentation is-hidden-touch">

    <h3 class="is-size-3 has-text-centered has-text-weight-bold has-text-black has-background-green">{{ presentation.title }}</h3>

    <figure class="image is-3by1" style="position:relative;">
        <img src="https://bulma.io/images/placeholders/720x240.png">

        <div class="text-presentation has-text-black">
            <h4>{{ presentation.subTitle }}</h4>
            <p>
                {{ presentation.text }}
            </p>

            <div class="column">
                <a href="#" class="button is-primary">bouton #1</a>
                <a href="#" class="button is-danger">bouton #2</a>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div style="display: flex;">
                    <div style="display: flex;align-items: center;justify-content: center" class="column is-centered">
                        <span class="icon is-medium">
                            <a href="{{ path('del_presentation', {'id': presentation.id}) }}" class="fas fa-2x fa-minus-circle has-text-danger" title="supprimer la présentation"></a>
                        </span>
                    </div>

                    <div class="column half-touch has-text-centered">
                        <a class="is-warning button is-small has-text-weight-bold" href="{{ path('edit_presentation', {'id': presentation.id }) }}">
                            éditer
                        </a>
                    </div>
                </div>
            {% endif %}

        </div>

    </figure>

</div>

