

<div class="is-centered block-presentation box" style="position:relative;background: center / cover no-repeat url('{% if presentation.imgPresentationName %}{{ vich_uploader_asset(presentation, 'img') | imagine_filter('HQ') }}{% else %}{{ asset('build/images/unnamed.71bb8ff7.jpg') }}{% endif %}');">

    <div class="box" style="position:absolute;width: 100%;height: 100%;top: 0;left: 0;background: rgba(0, 10, 0, 0.8)"></div>

        <div class="container column is-two-thirds is-full-touch">

            <div class="column mb-4">

                {% if presentation.title %}
                <p class="title is-1 is-spaced is-uppercase has-text-green-neon">{{ presentation.title }}</p>
                {% endif %}

                {% if presentation.subTitle %}
                <p class="subtitle is-3 has-text-green-neon">{{ presentation.subTitle }}</p>
                {% endif %}

            </div>

            <article class="message is-primary text-presentation" style="background: none">
                <div class="message-body has-text-light" style="border-top-right-radius: 0px;border-bottom-right-radius: 0px;background: rgba(18,18,18,0.9)">
                    {{ presentation.text|raw }}
                    {% if presentation.buttonLink %}
                        <div class="has-text-centered column">
                            <a href="{{ presentation.buttonLink }}" class="button is-green-custom has-text-weight-bold">En savoir plus...</a>
                        </div>
                    {% endif %}
                </div>
            </article>

        </div>

    {% if is_granted('ROLE_ADMIN') %}

        <span class="icon is-medium" style="position: absolute;top: 1rem;right: 1rem;">
            <a style="text-decoration: none" href="{{ path('presentation_edit', {'id': presentation.id}) }}" class="fas fa-2x fa-edit has-text-warning" title="éditer la présentation"></a>
        </span>

        {% if presentation.position != 1 %}
        <span class="icon is-medium" style="position: absolute;top: 1rem;">
            <a style="text-decoration: none" href="{{ path('order', {'id': presentation.id, 'order': 'down'}) }}" class="fas fa-2x fa-arrow-up has-text-light" title="monter la présentation"></a>
        </span>
        {% endif %}

        {% if presentation.position < presentations|length %}
        <span class="icon is-medium" style="position: absolute;bottom: 1rem;">
            <a style="text-decoration: none" href="{{ path('order', {'id': presentation.id, 'order': 'up'}) }}" class="fas fa-2x fa-arrow-down has-text-light" title="descendre la présentation"></a>
        </span>
        {% endif %}

    {% endif %}

</div>



