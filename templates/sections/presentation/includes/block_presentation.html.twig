

<div class="is-centered block-presentation" style="position:relative;{% if presentation.imgPresentationName %}background: center / cover no-repeat url('{{ vich_uploader_asset(presentation, 'img') | imagine_filter('HQ') }}');{% endif %}">

    <div style="position:absolute;width: 100%;height: 100%;top: 0;left: 0;background: rgba(0, 10, 0, 0.8)"></div>

        <div class="container column is-two-thirds is-full-touch">

            <div class="column mb-4">

                {% if presentation.title %}
                <p class="title is-1 is-spaced has-text-centered is-uppercase has-text-green-neon">{{ presentation.title }}</p>
                {% endif %}

                {% if presentation.subTitle %}
                <p class="subtitle is-3 has-text-centered has-text-green-neon">{{ presentation.subTitle }}</p>
                {% endif %}

            </div>

            <article class="message is-primary text-presentation" style="background: none">
                <div class="message-body has-text-light has-text-centered" style="border-top-right-radius: 0px;border-bottom-right-radius: 0px;background: rgba(18,18,18,0.9)">
                    {{ presentation.text|raw }}
                    {% if presentation.buttonLink %}
                        <div class="has-text-centered column">
                            <a href="{{ presentation.buttonLink }}" class="button is-green-custom has-text-weight-bold">En savoir plus...</a>
                        </div>

                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <hr style="background: rgba(255,255,255,.1);height: 1px;">
                        <div style="display: flex;">

                            <div class="column half-touch has-text-centered">
                                <span class="icon is-medium">
                                    <a style="text-decoration: none" href="{{ path('presentation_edit', {'id': presentation.id}) }}" class="fas fa-2x fa-edit has-text-warning" title="éditer la présentation"></a>
                                </span>
                            </div>

                            <div class="column half-touch has-text-centered">
                                <span class="icon is-medium">
                                    <a style="text-decoration: none" href="{{ path('presentation_del', {'id': presentation.id}) }}" class="fas fa-2x fa-times-circle has-text-danger" title="supprimer la présentation"></a>
                                </span>
                            </div>

                        </div>
                    {% endif %}
                </div>

            </article>



        </div>

</div>



