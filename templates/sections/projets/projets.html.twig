<div id="projets" style="position: relative;top: -8rem;"></div>

<section class="hero is-dark is-bold is-normal">
    <div class="hero-body">
        <div class="container">
            <h2 class="subtitle is-1 has-text-light has-text-weight-bold has-text-centered-touch is-flex-desktop subtitle-right" style="align-items: baseline">
                <span class="icon has-text-light is-hidden-touch" style="margin: 0 1.75rem">
                    <i class="fas fa-arrow-alt-circle-right"></i>
                </span>
                Projets
            </h2>
        </div>
    </div>

    <div class="columns is-multiline is-centered" style="padding: 0 1.5rem">

        {% for projet in projets %}
            {{ include('sections/projets/includes/box_projet.html.twig') }}
        {% endfor %}

        {% if is_granted('ROLE_ADMIN') %}
            <div class="column has-text-centered" style="justify-content: center;align-items: center;display: flex">
            <span class="icon is-large">
                <a href="{{ path('add_projet') }}" class="fas fa-3x fa-plus-circle has-text-info" title="Ajouter un projet"></a>
            </span>
            </div>
        {% endif %}
    </div>


</section>