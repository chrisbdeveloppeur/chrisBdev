{% extends 'base.html.twig' %}

{% block title %}Chris B Dev - Ajouter une technologie{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <section class="has-text-centered hero is-bold is-fullheight is-primary" style="justify-content: center;align-items: center;position: relative">

            <h1 class="title has-text-black-bis has-text-weight-bold" style="text-transform: uppercase">
                Ajouter une technologie
            </h1>

            <div class="box column is-two-fifths is-full-touch has-background-black-bis" style="align-self: center">

                <div class="column half-touch has-text-centered is-flex">

                    <span class="icon is-medium">
                        <a class="button is-small is-green-custom" type="submit" href="{{ path('home') }}" title="Revenir Ã  l'accueil">
                            <span style="text-decoration: none" class="fas fa-lg fa-arrow-left has-text-dark"></span>
                        </a>
                    </span>

                </div>

                {{ form_start(techno_form) }}

                <div class="field">
                    <label class="label">Nom de la technologie</label>
                    <div class="control">
                        {{ form_row(techno_form.name, {'attr' : {
                            'class' : 'input',
                            'placeholder' : 'ex : HTML',
                            'alt' : 'nom de la technologie'
                        }
                        }) }}
                    </div>
                </div>

                <div class="field">
                    <label class="label">Info bulle</label>
                    <div class="control">
                        {{ form_row(techno_form.help, {'attr' : {
                            'class' : 'input',
                            'placeholder' : 'ex : Hypertext Markup Language',
                            'alt' : 'info bulle'
                        }
                        }) }}
                    </div>
                </div>

                <div class="field is-grouped is-flex" title="Submit" style="justify-content: center">
                    <div class="control">
                        <button class="button is-green-custom" type="submit">Ajouter la technologie</button>
                    </div>
                </div>

                </div>

                {{ form_end(techno_form) }}
            </div>

        </section>
    {% endif %}

    {% include 'flash_message.html.twig' %}

{% endblock %}