<div class="column box-projet is-one-third">
    <a href="#" class="">
        <div class="box">

            <figure class="image is-4by3"
                    {% if projet.imgName %}
                    style="background: center / cover no-repeat url('{{ vich_uploader_asset(projet, 'img') | imagine_filter('thumb') }}')"
                    {% else %}
                    style="background: center / cover no-repeat url('https://bulma.io/images/placeholders/1280x960.png')"
                    {% endif %}
                    >
                        <div style="
                        background: rgba(1, 20, 1, 0.8);
                        position: absolute;
                        width: 100%;
                        height: 100%;
                        top: 0;
                        left: 0;">
            </figure>

            <div class="container">
                <h3 class="subtitle is-4 has-text-green-neon">{{ projet.title }}</h3>

                <p class="has-text-light">
                    {{ projet.text }}
                </p>
            </div>

        </div>
    </a>

    {% if is_granted('ROLE_ADMIN') %}
        <hr class="has-background-white">
        <div style="display: flex;">

            <div class="column half-touch has-text-centered">
                                <span class="icon is-medium">
                                    <a style="text-decoration: none" href="{{ path('edit_projet', {'id': projet.id}) }}" class="fas fa-2x fa-edit has-text-warning" title="Ã©diter le projet"></a>
                                </span>
            </div>

            <div class="column half-touch has-text-centered">
                                <span class="icon is-medium">
                                    <a style="text-decoration: none" href="{{ path('del_projet', {'id': projet.id}) }}" class="fas fa-2x fa-times-circle has-text-danger" title="supprimer le projet"></a>
                                </span>
            </div>

        </div>
    {% endif %}
</div>
