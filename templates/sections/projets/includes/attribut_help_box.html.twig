<article class="message is-small attribut-help-box" id="attribut-help-{{ attribut.id }}{{ projet.id }}">
    <div class="message-header has-background-primary has-text-light" style="text-shadow: none;border-radius: 0">
        <p>{{ attribut.title }}</p>
        <span class="icon has-text-light">
            <i class="fas fa-lg fa-info-circle"></i>
        </span>
    </div>
    <div class="message-body" style="text-shadow: none">
        {{ attribut.text }}
    </div>
</article>


<script>
    let attribut{{ attribut.id }}{{ projet.id }} = document.getElementById('attribut-{{ attribut.id }}{{ projet.id }}');

    attribut{{ attribut.id }}{{ projet.id }}.addEventListener('click', function () {
        let attributHelpBox = document.getElementById('attribut-help-{{ attribut.id }}{{ projet.id }}');
        attributHelpBox.style.display = 'block';
    });

    attribut{{ attribut.id }}{{ projet.id }}.addEventListener('mouseleave', function () {
        let attributHelpBox = document.getElementById('attribut-help-{{ attribut.id }}{{ projet.id }}');
        attributHelpBox.style.display = 'none';
    });

</script>

