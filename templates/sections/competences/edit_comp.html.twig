{% extends 'base.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
    <section class="has-text-centered hero is-bold is-fullheight is-primary" style="justify-content: center;align-items: center;position: relative">

        <h1 class="title has-text-black-bis has-text-weight-bold" style="position: absolute;top: 3rem;text-transform: uppercase">
            Modifier la compétence
        </h1>

        <div class="box has-background-black-bis is-half" style="align-self: center">
            {{ form_start(comp_form) }}

            <div class="field">
                <label class="label">Compétence</label>
                <div class="control">
                    {{ form_row(comp_form.name, {'attr' : {'class' : 'input', 'placeholder' : 'ex : HTML', 'alt' : 'Compétence' }
                    }) }}
                </div>
            </div>

            <div class="field">
                <label class="label">Valeur</label>
                <div class="control">
                    {{ form_row(comp_form.value, {'attr' : {'class' : 'input', 'placeholder' : 'ex : 80', 'alt' : 'Valeur' }
                    }) }}
                </div>
            </div>

            <div class="field">
                <label class="label">Couleur</label>
                <div class="control">
                    {{ form_row(comp_form.color, {'attr' : {'class' : 'input', 'placeholder' : 'ex : blue', 'pattern' : '[0-9]{10}', 'alt' : 'Couleur' }
                    }) }}
                </div>
            </div>

            <div class="column is-centered">
                <button type="submit" style="width: 100%;" class="button is-primary">Valider</button>
            </div>

            {{ form_end(comp_form) }}

        </div>


    </section>
    {% endif %}

{% endblock %}