{% extends 'base.html.twig' %}

{% block title %}Chris B Dev - Ajouter une compétence{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
    <section class="has-text-centered hero is-bold is-fullheight is-primary" style="justify-content: center;align-items: center;position: relative; padding: 2rem">

        <h1 class="title has-text-black-bis has-text-weight-bold" style="text-transform: uppercase">
            Ajouter une compétence
        </h1>

        <div class="box column is-two-fifths is-full-touch has-background-black-bis" style="align-self: center">

            <div class="column half-touch has-text-centered is-flex">

                    <span class="icon is-medium">
                        <a class="button is-small is-green-custom" type="submit" href="{{ path('home') }}#competences" title="Revenir à l'accueil">
                            <span style="text-decoration: none" class="fas fa-lg fa-arrow-left has-text-dark"></span>
                        </a>
                    </span>

            </div>

            {{ form_start(comp_form) }}

            <div class="field">

                <label class="label">Titre de la compétence</label>

                <div class="control" style="display: flex;align-items: center;justify-content: space-between">

                    <div class="select is-fullwidth">
                        {{ form_widget(comp_form.name, {'attr' : {'placeholder' : 'ex : HTML', 'alt' : 'Compétence' }
                        }) }}
                    </div>

                    <a class="tag icon is-medium" href="{{ path('add_techno') }}" style="text-decoration: none;margin-left: .75rem" title="Ajouter une technologie">
                        <i  class="fas fa-lg fa-plus-circle has-text-black-bis" ></i>
                    </a>

                </div>

            </div>

            <div class="field">
                <label class="label">Valeur</label>
                <div class="control">
                    {{ form_row(comp_form.value, {'attr' : {'class' : 'input', 'placeholder' : 'ex : 80', 'alt' : 'Valeur' }
                    }) }}
                </div>
            </div>

            <div class="field">
                <label class="label">Couleur</label>
                <div class="control">
                    {{ form_row(comp_form.color, {'attr' : {'class' : 'input', 'placeholder' : 'ex : blue', 'pattern' : '[0-9]{10}', 'alt' : 'Couleur' }
                    }) }}
                </div>
            </div>

            <div class="field is-grouped is-flex" title="Submit" style="justify-content: center">
                <div class="control">
                    <button class="button is-green-custom" type="submit">Ajouter la compétence</button>
                </div>
            </div>

            {{ form_end(comp_form) }}
        </div>

        <a href="{{ path('home') }}#competences" class="button is-danger">
            Retour
        </a>


    </section>
    {% endif %}

{% endblock %}