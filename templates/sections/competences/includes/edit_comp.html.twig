{% extends 'base.html.twig' %}

{% block title %}Chris B Dev - Modifier une compétence{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
    <section class="has-text-centered hero is-bold is-fullheight is-primary" style="justify-content: center;align-items: center;position: relative">

        <h1 class="title has-text-black-bis has-text-weight-bold" style="text-transform: uppercase">
            Modifier la compétence
        </h1>
        <h3 class="subtitle is-4 has-text-black-bis">"{{ competence.name }}"</h3>

        <div class="box column is-two-fifths is-four-fifths-touch has-background-black-bis" style="align-self: center">
            {{ form_start(comp_form) }}

            <div class="field">
                <label class="label">Titre de la compétence</label>
                <div class="control" style="display: flex;align-items: center;justify-content: space-between">
                    <div class="select is-fullwidth">
                        {{ form_widget(comp_form.name, {'attr' : {'placeholder' : 'ex : HTML', 'alt' : 'Compétence' }
                        }) }}
                    </div>
{#                    <div class="is-half">#}
                        <a class="tag icon is-medium" href="{{ path('add_techno') }}" style="text-decoration: none;margin-left: .75rem" title="Ajouter une technologie">
                            <i  class="fas fa-lg fa-plus-circle has-text-black-bis" ></i>
                        </a>
{#                    </div>#}

                </div>

            </div>

            <div class="field">
                <label class="label">Valeur en %</label>
                <div class="control">
                    {{ form_widget(comp_form.value, {'attr' : {'class' : 'input', 'placeholder' : 'ex : 80', 'alt' : 'Valeur' }
                    }) }}
                </div>
            </div>

            <div class="field">
                <label class="label">Couleur</label>
                <div class="control">
                    <div class="select is-fullwidth">
                        {{ form_widget(comp_form.color, {'attr' : {'class' : 'input', 'placeholder' : 'ex : blue', 'pattern' : '[0-9]{10}', 'alt' : 'Couleur' }
                        }) }}
                    </div>
                </div>
            </div>

            <div class="column is-centered">
                <button type="submit" style="width: 100%;" class="button is-info">Valider</button>
            </div>

            {{ form_end(comp_form) }}

        </div>

        <a href="{{ path('home') }}#competences" class="button is-danger">
            Retour
        </a>


    </section>
    {% endif %}

{% endblock %}