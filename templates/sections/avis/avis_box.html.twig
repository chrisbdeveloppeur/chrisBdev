<div class="box {% if avis.validated == false %} is-shadow {% endif %}">
    {% set nb = avis.note %}
    <div class="column is-flex is-align-items-center">
        {% for i in 1..nb %}
            <div class="column">
                <span class="icon is-size-4 is-size-5-touch has-text-white">
                    <i class="fas fa-star fa-2x is-text-green-custom"></i>
                </span>
            </div>
        {% endfor %}
    </div>
    <br>
    {% if avis.commentaire %}
        <article class="message is-dark">
            <div class="message-body">
                {{ avis.commentaire }}
            </div>
        </article>
    {% endif %}

    <div class="columns is-justify-content-space-between">
        <span>
            {% if avis.user %}
                Par {{ avis.user }}
            {% else %}
                Par <i>client anonyme</i>
            {% endif %}
        </span>

        <span>
            Emis le {{ avis.date|date("d/m/Y Ã  H:i") }}
        </span>

    </div>
</div>