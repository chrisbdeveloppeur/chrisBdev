<div class="container is-flex" style="justify-content: center">
    <div class="column is-flex box is-half has-text-centered" style="background: rgba(10,10,10,0.9);box-shadow: rgb(0, 0, 0) 0px 0px 15px;position: relative">
        <article class="column has-text-centered">

                {% if form_errors(avi_form) != null %}
                    <article class="message is-small is-danger">
                        <div class="message-header">
                            <p>Oops !</p>
                            <span class="icon is-small has-text-white">
                                <i class="fas fa-lg fa-exclamation-triangle"></i>
                            </span>
                        </div>
                        <div class="message-body has-text-left">
                            {{ form_errors(avi_form) }}
                        </div>
                    </article>
                {% endif %}

            <div class="field">
                <label class="label has-text-white">Pseudo / Email *</label>
                <div class="control has-icons-left">
                    {{ form_widget(avi_form.user, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="field">
                <label class="label has-text-white">Note *</label>
                <div class="control is-flex is-justify-content-space-evenly">
{#                    {{ form_widget(avi_form.note, {'attr': {'class': ''}}) }}#}
                    {% for child in avi_form.note %}
                        <div class="column note-star" onmouseover="fillStarOnOver(this)" onmouseleave="emptyStarOnLeave(this)">
                            <div class="column">
                                <span class="icon is-size-4 has-text-white">
                                    <i class="far fa-star fa-2x"></i>
                                </span>
                            </div>
                            <div class="column">
                                {{ form_widget(child, {'attr': {'class': ''}, 'checked': 'true' } ) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="field">
                <label class="label has-text-white">Commentaire</label>
                <div class="control has-icons-left">
                    {{ form_widget(avi_form.commentaire, {'attr': {'class': 'textarea is-primary', 'placeholder' : 'Taper mon commentaire'}}) }}
                </div>
            </div>

            <button type="submit" class="button is-green-custom is-small"
                    data-sitekey="6LfSl9wZAAAAACPrrml-QieLt8K7CfycrC1vJwMr"
                    data-callback='onSubmit'
                    data-action='submit'>
                    <span class="icon">
                        <i class="fas fa-paper-plane"></i>
                    </span>
                    <span>
                        Soumettre
                    </span>
            </button>

        </article>
    </div>
</div>


<script>

    function fillStarOnOver(star) {
        let iconStar = star.firstElementChild.firstElementChild.firstElementChild;
        let starsArr = document.getElementsByClassName('note-star');
        console.log(starsArr);
        iconStar.classList.replace('far', 'fas');
    }

    function emptyStarOnLeave(star){
        let iconStar = star.firstElementChild.firstElementChild.firstElementChild;
        iconStar.classList.replace('fas', 'far');
    }
</script>